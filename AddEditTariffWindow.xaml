<Window x:Class="ASKUE.Windows.AddEditTariffWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Тариф" Height="400" Width="350" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="15">
        <TextBlock Text="Тип ресурса:"/>
        <ComboBox Name="ComboResourceType" DisplayMemberPath="naimenovaniye" SelectedValuePath="tip_resursa_id" SelectedValue="{Binding id_tipa_resursa}"/>
        <TextBlock Text="Стоимость (в рублях):" Margin="0,10,0,0"/>
        <TextBox Text="{Binding stoimost_za_edinitsu, StringFormat=N2}"/>
        <TextBlock Text="Действует с:" Margin="0,10,0,0"/>
        <DatePicker SelectedDate="{Binding data_nachala_deystviya}"/>
        <TextBlock Text="Действует по (оставить пустым для бессрочного):" Margin="0,10,0,0"/>
        <DatePicker SelectedDate="{Binding data_okonchaniya_deystviya}"/>
        <Button Content="Сохранить" Click="BtnSave_Click" Margin="0,30,0,0"/>
    </StackPanel>
</Window>