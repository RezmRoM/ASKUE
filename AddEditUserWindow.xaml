<Window x:Class="ASKUE.Windows.AddEditUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Пользователь" Height="400" Width="350" WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <StackPanel Margin="15">
        <TextBlock Text="ФИО:"/>
        <TextBox Name="TBoxFio" Text="{Binding fio}"/>

        <TextBlock Text="Логин:" Margin="0,10,0,0"/>
        <TextBox Name="TBoxLogin" Text="{Binding login}"/>

        <TextBlock Text="Пароль:" Margin="0,10,0,0"/>
        <TextBox Name="TBoxPassword" ToolTip="Оставьте пустым, чтобы не менять пароль"/>

        <TextBlock Text="Роль:" Margin="0,10,0,0"/>
        <ComboBox Name="ComboRole" DisplayMemberPath="Name" SelectedValuePath="Id" SelectedValue="{Binding id_rol}"/>

        <Button Content="Сохранить" Name="BtnSave" Click="BtnSave_Click" Margin="0,30,0,0"/>
    </StackPanel>
</Window>