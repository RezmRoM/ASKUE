<Page x:Class="ASKUE.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ASKUE.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid Background="White">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
            <TextBlock Text="Вход в систему" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>
            <TextBlock Text="Логин:" Margin="0,0,0,5"/>
            <TextBox Name="TBoxLogin"/>
            <TextBlock Text="Пароль:" Margin="0,10,0,5"/>
            <PasswordBox Name="PBoxPassword"/>
            <Button Name="BtnLogin" Content="Войти" Foreground="White" Width="200" HorizontalAlignment="Center" Click="BtnLogin_Click" Margin="0,20,0,0" />
        </StackPanel>
    </Grid>
</Page>
