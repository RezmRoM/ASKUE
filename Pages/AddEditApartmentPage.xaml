<Page x:Class="ASKUE.Pages.AddEditApartmentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:ASKUE.Pages"
      mc:Ignorable="d"
      d:DesignHeight="300" d:DesignWidth="400"
      Title="Квартира">
    <StackPanel Margin="15">
        <TextBlock Text="Адрес дома:"/>
        <TextBox Text="{Binding adres}"/>
        <TextBlock Text="Номер квартиры:" Margin="0,10,0,0"/>
        <TextBox Text="{Binding nomer_kvartiry}"/>
        <TextBlock Text="Проживающий (Пользователь):" Margin="0,10,0,0"/>
        <ComboBox Name="ComboResident" DisplayMemberPath="fio" SelectedValuePath="polzovatel_id"/>
        <Button Content="Сохранить" Click="BtnSave_Click" Margin="0,30,0,0"/>
    </StackPanel>
</Page>