<Page x:Class="ASKUE.Pages.AddEditUserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:ASKUE.Pages"
      mc:Ignorable="d"
      d:DesignHeight="400" d:DesignWidth="350"
      Title="Пользователь">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="300">
            <TextBlock Text="ФИО:"/>
            <TextBox Name="TBoxFio" Text="{Binding fio}"/>

            <TextBlock Text="Логин:" Margin="0,10,0,0"/>
            <TextBox Name="TBoxLogin" Text="{Binding login}"/>

            <TextBlock Text="Пароль:" Margin="0,10,0,0"/>
            <TextBox Name="TBoxPassword" ToolTip="Оставьте пустым, чтобы не менять пароль"/>

            <TextBlock Text="Роль:" Margin="0,10,0,0"/>
            <ComboBox Name="ComboRole" DisplayMemberPath="Name" SelectedValuePath="Id" SelectedValue="{Binding id_rol}"/>

            <Button Content="Сохранить" Name="BtnSave" Click="BtnSave_Click" Margin="0,30,0,0" MinWidth="100"/>
        </StackPanel>
    </Grid>
</Page>