<Page x:Class="ASKUE.Pages.AddEditMeterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:ASKUE.Pages"
      mc:Ignorable="d"
      d:DesignHeight="350" d:DesignWidth="400"
      Title="Счетчик">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="300">
            <TextBlock Text="Серийный номер:"/>
            <TextBox Text="{Binding seriyniy_nomer}"/>
            <TextBlock Text="Квартира:" Margin="0,10,0,0"/>
            <ComboBox Name="ComboApartment" SelectedValue="{Binding id_kvartiry}"/>
            <TextBlock Text="Тип ресурса:" Margin="0,10,0,0"/>
            <ComboBox Name="ComboResourceType" DisplayMemberPath="Name" SelectedValuePath="Id" SelectedValue="{Binding id_tipa_resursa}"/>
            <TextBlock Text="Дата установки:" Margin="0,10,0,0"/>
            <DatePicker SelectedDate="{Binding data_ustanovki}"/>
            <Button Content="Сохранить" Click="BtnSave_Click" Margin="0,30,0,0" MinWidth="100"/>
        </StackPanel>
    </Grid>
</Page>