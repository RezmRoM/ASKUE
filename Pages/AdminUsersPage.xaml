<Page x:Class="ASKUE.Pages.AdminUsersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ASKUE.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminUsersPage">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Устанавливаем AutoGenerateColumns="False" -->
        <DataGrid Name="UsersGrid" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <!-- Определяем столбцы вручную -->
                <DataGridTextColumn Header="ID" Binding="{Binding polzovatel_id}" Width="50"/>
                <DataGridTextColumn Header="ФИО" Binding="{Binding fio}" Width="*"/>
                <DataGridTextColumn Header="Логин" Binding="{Binding login}" Width="200"/>
                <!-- Правильный Binding для связанной таблицы: указываем свойство 'naimenovaniye' -->
                <DataGridTextColumn Header="Роль" Binding="{Binding K_Roli.naimenovaniye}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
            <Button Content="Добавить" Name="BtnAdd" Click="BtnAdd_Click"/>
            <Button Content="Редактировать" Name="BtnEdit" Click="BtnEdit_Click"/>
            <Button Content="Удалить" Name="BtnDelete" Click="BtnDelete_Click"/>
        </StackPanel>
    </Grid>
</Page>
