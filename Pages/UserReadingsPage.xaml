<Page x:Class="ASKUE.Pages.UserReadingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ASKUE.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserReadingsPage">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="5">
            <TextBlock Text="Выберите счетчик:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <ComboBox Name="ComboMeters" DisplayMemberPath="seriyniy_nomer" Width="200" SelectionChanged="ComboMeters_SelectionChanged"/>
            <Button Content="Добавить показание" Name="BtnAddReading" Click="BtnAddReading_Click" Margin="20,0,0,0"/>
        </StackPanel>

        <!-- Устанавливаем AutoGenerateColumns="False" -->
        <DataGrid Name="ReadingsGrid" Grid.Row="1" Margin="5" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <!-- Определяем нужные столбцы -->
                <DataGridTextColumn Header="Дата" Binding="{Binding data_snyatiya, StringFormat='dd.MM.yyyy'}" Width="*"/>
                <DataGridTextColumn Header="Значение" Binding="{Binding znacheniye}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
