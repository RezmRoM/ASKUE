<Page x:Class="ASKUE.Pages.AddEditTariffPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:ASKUE.Pages"
      mc:Ignorable="d"
      d:DesignHeight="400" d:DesignWidth="350"
      Title="Тариф">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="300">
            <TextBlock Text="Тип ресурса:"/>
            <ComboBox Name="ComboResourceType" DisplayMemberPath="Name" SelectedValuePath="Id" SelectedValue="{Binding id_tipa_resursa}"/>
            <TextBlock Text="Стоимость (в рублях):" Margin="0,10,0,0"/>
            <TextBox Text="{Binding stoimost_za_edinitsu, StringFormat=N2}"/>
            <TextBlock Text="Действует с:" Margin="0,10,0,0"/>
            <DatePicker SelectedDate="{Binding data_nachala_deystviya}"/>
            <TextBlock Text="Действует по (оставить пустым для бессрочного):" Margin="0,10,0,0"/>
            <DatePicker SelectedDate="{Binding data_okonchaniya_deystviya}"/>
            <Button Content="Сохранить" Click="BtnSave_Click" Margin="0,30,0,0" MinWidth="100"/>
        </StackPanel>
    </Grid>
</Page>