<Window x:Class="ASKUE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ASKUE"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Language="ru-RU">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="64"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#2d3f53" Padding="20,0">
            <Grid>
                <TextBlock x:Name="TBlockTitle" FontSize="20" FontWeight="SemiBold" Foreground="White" 
                           VerticalAlignment="Center" HorizontalAlignment="Center"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <TextBlock x:Name="TBlockUserFio" Foreground="White" VerticalAlignment="Center" Margin="0,0,20,0"/>
                    <Button x:Name="BtnBack" Content="Назад" Width="100" Height="30" Click="BtnBack_Click" Visibility="Collapsed"/>
                    <Button x:Name="BtnLogout" Content="Выйти" Width="100" Height="30" Click="BtnLogout_Click" Visibility="Collapsed"/>
                </StackPanel>
            </Grid>
        </Border>

        <Frame x:Name="MainFrame" Grid.Row="1" NavigationUIVisibility="Hidden" Navigated="MainFrame_Navigated"/>
    </Grid>
</Window>
